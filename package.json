{
  "name": "@opencrvs/countryconfig",
  "version": "1.3.2",
  "description": "OpenCRVS country configuration for reference data",
  "license": "MPL-2.0",
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "scripts": {
    "dev": "yarn start",
    "precommit": "lint-staged",
    "test": "echo 'no tests, yet'",
    "test:compilation": "tsc --noEmit",
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "ts-node --transpile-only -r tsconfig-paths/register src/index.ts",
    "deploy": "bash infrastructure/deploy.sh",
    "restore-snapshot": "bash infrastructure/restore-snapshot.sh",
    "snapshot": "bash infrastructure/emergency-backup-metadata.sh",
    "port-forward": "bash infrastructure/port-forward.sh",
    "validate-translations": "ts-node src/validate-translations.ts"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-operations": "^3.0.4",
    "@types/google-libphonenumber": "^7.4.23",
    "@types/hapi__inert": "5.2.1",
    "@types/handlebars": "^4.1.0",
    "@types/react-intl": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "1.0.0-rc.13",
    "lint-staged": "^7.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "react-intl": "^6.4.3"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.1",
    "@hapi/inert": "^6.0.3",
    "@sendgrid/mail": "^7.7.0",
    "@types/chalk": "^2.2.0",
    "@types/csv2json": "^1.4.0",
    "@types/fhir": "^0.0.30",
    "@types/geojson": "^7946.0.4",
    "@types/hapi-pino": "^6.3.0",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.117",
    "@types/node": "^10.12.5",
    "@types/node-fetch": "^2.6.2",
    "@types/pino": "^5.14.0",
    "app-module-path": "^2.2.0",
    "chalk": "^2.4.1",
    "country-data": "^0.0.31",
    "cross-env": "^6.0.3",
    "csv2json": "^1.4.2",
    "date-fns": "^2.28.0",
    "esbuild": "^0.18.9",
    "google-libphonenumber": "^3.2.32",
    "handlebars": "^4.7.7",
    "hapi-auth-jwt2": "10.4.0",
    "hapi-pino": "^6.3.0",
    "hapi-sentry": "^3.1.0",
    "joi": "^17.4.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "pino": "^5.14.0",
    "short-uid": "^0.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^5.1.6",
    "zod": "^3.17.3"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "resolutions": {
    "minimist": "^1.2.2",
    "acorn": "^6.4.1"
  }
}
